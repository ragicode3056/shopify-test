<style>
  form {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}
#shopify-section-template--18725255971096__exchange-form{
      display: flex;
    justify-content: center;
    margin-bottom: 20px;
}
label {
  font-size: 16px;
  margin-bottom: 5px;
}

input[type="text"] {
  padding: 10px;
  font-size: 16px;
  border-radius: 5px;
  border: 1px solid #ccc;
  margin-bottom: 15px;
  width: 100%;
  box-sizing: border-box;
}

input[type="submit"] {
  background-color: #333;
  color: #fff;
  font-size: 16px;
  border-radius: 5px;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
  transition: background-color 0.3s ease-in-out;
}

input[type="submit"]:hover {
  background-color: #555;
}

</style>

<form method="POST" action="/apps/exchange-form">
  <input type="hidden" name="order_id" value="{{ order.id }}" />
  <label for="postal_code">Postal Code:</label>
  <input type="text" name="postal_code" id="postal_code" required />
  <label for="house_number">House Number:</label>
  <input type="text" name="house_number" id="house_number" required />
  <button type="submit">Submit</button>
</form>

{% if request.post? %}
  {% assign order_id = request.post.order_id %}
  {% assign postal_code = request.post.postal_code %}
  {% assign house_number = request.post.house_number %}
  
  {% comment %}
  
  {% endcomment %}
  
  <p>Your form has been submitted successfully!</p>
{% endif %}
